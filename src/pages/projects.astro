---
import { Box, Heading, Container, Grid } from "@radix-ui/themes";
import Layout from "../layouts/Layout.astro";
import cfc_logo_short from "../../public/assets/cfc_logo_short.svg";
import double_chat_bubble_icon from "../../public/assets/double_chat_bubble_icon.svg";
import rocket_logo from "../../public/assets/rocket_logo.svg";
import ProjectCard from "../components/ProjectCard.astro";
import Nav from "../components/Nav.astro";
---

<Layout title="Projects">
	<!--  -->
	<Nav/>
	<Box className="projects-container">
		<Heading className="heading" align="center" as="h2" size="8"
			>Projects</Heading
		>
		<Container>
			<Grid
				columns={{ xs: "2", sm: "3", md: "3", lg: "3", xl: "4" }}
				gap="4"
				className="grid-container"
			>
				<ProjectCard
					alt={"Code For Chicago logo"}
					gitHubLink={"https://github.com/code-312"}
					src={cfc_logo_short}
					projectDescription={"Civic Tech Organization building digital services for the city of Chicago"}
					projectTitle={"Code For Chicago"}
					siteLink={"https://code312.org/"}
				/>
				<ProjectCard
					alt={"Far logo"}
					gitHubLink={"https://github.com/diorshelton/far"}
					src={rocket_logo}
					projectDescription={"React project that fetches data from the Solar System API"}
					projectTitle={"Far"}
					siteLink={""}
				/>
				<ProjectCard
					alt={"Say logo"}
					gitHubLink={"https://github.com/diorshelton/Say"}
					src={double_chat_bubble_icon}
					projectDescription={"Text based social meadia aplication built around comments"}
					projectTitle={"Say"}
					siteLink={""}
				/>
			</Grid>
		</Container>
	</Box>
</Layout>
<style>
	.heading {
		padding: 3rem;
	}
</style>
