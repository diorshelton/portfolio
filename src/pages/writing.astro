---
import { Box, Heading, Container, Text, Flex, Link } from "@radix-ui/themes";
import Layout from "../layouts/Layout.astro";
import BlogPost from "../components/BlogPost.astro";
import Nav from "../components/Nav.astro";
const posts = [];
---

<Layout title="Writing">
	<Nav/>
	<Box className="articles">
		<Heading className="heading" align="center" as="h2" size="8"
			>Writing
		</Heading>
		<Container size="3">
			<Box className="article-container">
				{posts.length? <BlogPost/> : "No blog posts yet. Come back later ;)"	}
				<!-- <BlogPost
					date={"December 31, 2024"}
					blogTitle={"First blog post"}
					blurb={"This is a post"}
					href={"#"}
				/> -->
			</Box>
		</Container>
	</Box>
</Layout>
<style>
	.article-container {
		border-radius: var(--radius-3);
		padding: 3rem;
    /* margin: 2rem; */
		box-shadow: var(--shadow-3);
	}
  .date {
    padding-top: 0.5rem;
  }
	.heading {
		padding: 3rem;
	}
</style>
