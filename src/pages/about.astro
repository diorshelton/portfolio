---
import {
	Box,
	Flex,
	Text,
	Heading,
	Container,
} from "@radix-ui/themes";
import Layout from "../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import profilefoto from "../../public/assets/foto.jpeg";
import ContactMe from "../components/ContactMe.astro";
---

<Layout title="About">
	<Box className="about-container">
		<Heading className="heading" align="center" as="h2" size="8">About</Heading
		>
		<Container>
			<Flex className="flex-container" align="center" justify={"center"}>
				<Box className="photo-box-container">
					<Image class="foto" src={profilefoto} alt="profile picture" />
				</Box>
				<Box maxWidth={"450px"}>
					<Text className="about-text" as="p">
						Lorem ipsum dolor sit amet consectetur adipisicing elit. Harum
						tenetur quisquam veritatis ullam dignissimos vel porro in error
						ipsa, delectus, doloremque nulla odit molestiae laboriosam? Soluta
						possimus at et est. Lorem ipsum dolor sit amet consectetur
						adipisicing elit. Et cum eligendi quisquam officiis qui maxime
						exercitationem maiores est? Laboriosam officiis debitis aliquid
						distinctio tenetur. Possimus temporibus amet molestiae earum enim!</Text
					>
					<ContactMe></ContactMe>
				</Box>
			</Flex>
		</Container>
	</Box>
</Layout>
<style>
	img {
		padding: 1rem;
		display: block;
		max-width: 40rem;
		max-height: 40rem;
		width: auto;
		height: auto;
	}
	.flex-container {
		@media (width <= 650px) {
			flex-direction: column;
		}
	}
	.about-text {
		padding: 3rem;
		text-indent: 20%;
	}
	.heading {
		padding: 3rem;
	}
</style>
