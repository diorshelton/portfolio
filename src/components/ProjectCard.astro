---
import { Box, Card, Flex, Heading, Link, Text } from "@radix-ui/themes";
import Image from "astro/components/Image.astro";

const { alt, gitHubLink, src, projectDescription, projectTitle, siteLink } =
	Astro.props;
---

<Card size="4" className="project-box">
	<Box maxWidth="20rem" minWidth="5rem">
		<Image class="logo" alt={alt} src={src} />
		<Heading className="heading-h3" as="h3" size="5">
			<Text>{projectTitle}</Text>
		</Heading>
		<Flex className="text-and-links" direction={"column"}>
			<Text className="text-description">{projectDescription}</Text>
			<Flex direction="column" className="links">
				{
					gitHubLink && (
						<Link className="project-link" href={gitHubLink}>
							View on GitHub
						</Link>
					)
				}
				{
					siteLink && (
						<Link className="project-link" href={siteLink}>
							View website
						</Link>
					)
				}
			</Flex>
		</Flex>
	</Box>
</Card>
<style>
	.links {
		padding-top: 2rem;
	}
	.text-and-links {
		padding-bottom: 0rem;
	}
	.project-box {
		min-height: 345px;
		margin: 0.5rem;
	}
	.heading-h3 {
		padding: 0rem 0rem 0.75rem;
	}
	.project-link {
		padding-bottom: 0.5rem;
		padding-top: 0.5rem;
	}
	.logo {
		padding: 0rem 0rem 2rem;
		height: 5rem;
		width: 5rem;
	}
</style>
