---
import { Box, Card, Flex, Heading, Link, Text } from "@radix-ui/themes";
import Image from "astro/components/Image.astro";

const { alt, gitHubLink, src, projectDescription, projectTitle, siteLink } =
	Astro.props;
---

<Card size="5" className="project-box">
	<Box maxWidth="20rem" minWidth="5rem">
		<Image class="logo" alt={alt} src={src} />
		<Heading as="h3" size="5">
			<Text>{projectTitle}</Text>
		</Heading>
		<Text>{projectDescription}</Text>
		<Flex direction={"column"}>
			<Link className="project-link" underline="always" href={gitHubLink}
				>View on Github</Link
			>
			<Link className="project-link" href={siteLink} underline="always"
				>View Project</Link
			>
		</Flex>
	</Box>
</Card>
<style>
	.project-box {
		min-height: 345px;
		margin: 0.5rem;
	}
	.project-link {
		margin: 0.5rem;
	}
	.logo {
		margin: 0px;
		height: 4rem;
		width: 4rem;
	}
</style>
